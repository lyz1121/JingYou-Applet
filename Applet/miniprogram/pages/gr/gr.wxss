/* pages/gr/gr.wxss */
page{
  background-color: #edece8;
}
button{
  position: relative ;
  margin-top: 40rpx;
  width: 70%;
  margin-bottom: 60rpx;
}  
.user_bg{
  position: relative ;
  top: -1vh;
  text-align: center;
  height: 40vh;
  width: 100%;
  filter: blur(15rpx);
  border: 7rpx solid #ffffff;
}
.user_icon{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 10vh;
  text-align: center;
  width: 13vh;
  height: 13vh;
  border-radius: 50% ;
  border: 5rpx solid rgb(255, 255, 255);
}
.userinfo-nickname
{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 25vh;
  color: white;
  font-size: 40rpx;
}


.user_content
{
  position: relative ;
}
.user_main
{
  position: absolute;
  width: 90%;
  Left: 50%;
  transform: translateX( -50%);
  top: -60rpx;
}
.list-item {
  position: absolute;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
  margin-top: 20rpx;
  position: relative; /*父元素位置要设置为相对*/
  background: white;
  border-radius: 25rpx;
}

.item-image {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  left: 30rpx;
  top: 13rpx;
}

.item-text {
  position: absolute;
  color: #741f09;
  font-size: 35rpx;
  font-weight: 500;
  margin-left: 40rpx;
  left: 90rpx;
  top: 25rpx;
}

.image-jiantou {
  width: 35rpx;
  height: 35rpx;
  position: absolute; /* 要约束所在位置的子元素的位置要设置成绝对 */
  right: 20rpx;
  top: 29rpx;
}