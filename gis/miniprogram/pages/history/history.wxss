/* pages/list/list.wxss */

page {
  background: #efefef;
}
/* 列表 */
.vacancy {
  height: 100%;
  font-size: 30rpx;
  color: gray;
  text-align: center;
  margin-top: 45%;
}
.vacancy image {
  width: 306rpx;
  height: 200rpx;
  margin-bottom: .8rem;
}
.list {
  background: #fff;
  margin: 20rpx;
  box-sizing: border-box;
  padding: 10rpx 17rpx ;
  border-bottom: 1px solid #eee;
  border-radius: 20rpx;
}
 
.pic-con {
    display: flex;
    align-items: center;
    margin-top: 5rpx;
    margin-bottom: 5rpx;
}
 
/* 选项框 */

.pic {
height: 175rpx;
width: 280rpx;
}

.pic image {
width: 100%;
height: 100%;
border-radius: 25rpx;
}

.con {
width: 60%;
height: 180rpx;
/* flex: 6; */
/* padding-top: 10rpx; */
padding-left: 20rpx;
/* padding-bottom: 20rpx; */
/* box-sizing: border-box;*/
}

view, text, block {
font-family: "Microsoft Yahei";
}

/* 类型描述 */

.type1 {
  margin: 25rpx 0 55rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  color: #323232;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.buy-button {
width: 100%;
height: 80rpx;
display: flex;
flex-direction: row;
justify-content: flex-end;
align-items: center;
}
.buy-button button:not([size='mini']) {
width: 240rpx;
height: 60rpx;
font-size: 30rpx;
}

#buy-right {
  left: 220rpx;
  border: 2px solid rgb(116,31,9);
  color: rgb(167, 50, 20);
  width: 150rpx;
  height: 50rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
}

